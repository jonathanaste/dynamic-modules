<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleStyleText">
        <item name="android:textSize">@dimen/text_20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainPrizeStyleText">
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrizeStyleText">
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyStyleText">
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

    <style name="FooterStyleText">
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="BottomTabLayoutTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>



    <style name="DialogFragmentTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <dimen name="text_20sp">20sp</dimen>
    <dimen name="text_18sp">18sp</dimen>
    <dimen name="text_14sp">14sp</dimen>
</resources>
